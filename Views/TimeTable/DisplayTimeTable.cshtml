@model List<List<string>>

@{
    ViewData["Title"] = "Time table";
    int dayCount = Model.Count;
    int periodsPerDay = Model[0].Count;
}

<style>
    .timetable {
        margin: 30px auto;
        font-size: 18px;
        border-collapse: collapse;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

        .timetable th, .timetable td {
            padding: 15px 25px;
            text-align: center;
            border: 1px solid #ccc;
        }

        .timetable td {
            background-color: #f9f9f9;
            font-weight: 500;
        }

        .timetable th {
            background-color: #2c3e50;
            color: white;
            font-weight: 600;
        }

    h2 {
        text-align: center;
        margin-top: 40px;
        color: #2c3e50;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 6px;
        text-decoration: none;
        color: white;
        background-color: #007bff;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>

<h2>Dynamic Timetable</h2>

<table class="timetable">
    <tbody>
        @for (int period = 0; period < periodsPerDay; period++)
        {
            <tr>
                @for (int day = 0; day < dayCount; day++)
                {
                    <td>@Model[day][period]</td>
                }
            </tr>
        }
    </tbody>
</table>

<div style="text-align:center; margin-top: 25px;">
    <a href="@Url.Action("CreateTimeTable", "Timetable")" class="btn btn-primary">
        Create New TimeTable
    </a>
</div>
